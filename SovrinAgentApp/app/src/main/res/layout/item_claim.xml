<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="38.5dp"
    android:paddingTop="24dp"
    android:paddingRight="28dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_claim_attr_name"
            style="@style/ProfileItemSmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Claim Attribute Name" />

        <TextView
            android:id="@+id/tv_claim_attr_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ProfileItemLargeText"
            tools:text="Claim Attribute Value " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_weight="0.45"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_verified_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ProfileItemSmallText"
            android:text="@string/verified_by" />

        <TextView
            android:id="@+id/tv_schema_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ProfileItemSmallText"
            android:text="@string/official_authorities" />
    </LinearLayout>
</LinearLayout>

