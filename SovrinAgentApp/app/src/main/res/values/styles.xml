<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextProfile" parent="Text">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="Card">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">10.5sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textSize">19.5sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MedicineHeaderText">
        <item name="android:textSize">16.5sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_header</item>
    </style>

    <style name="MedicineMessageText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#5a564e</item>
    </style>

    <style name="HistoryContentItemBottomText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#7ed321</item>
    </style>

    <style name="OrderItemDateText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#989b9f</item>
    </style>

    <style name="MedicineAddressHeaderText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#4e545a</item>
    </style>

    <style name="MedicineAddressText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#3a6ea2</item>
    </style>

    <style name="ScanButtonLeftText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212529</item>
    </style>

    <style name="LicenseListHeaderText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212529</item>
    </style>

    <style name="ScanButtonRightText">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="ReceiptHeaderText">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_header</item>
    </style>

    <style name="ReceiptItemHeaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">roboto-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#bbbbbb</item>
    </style>

    <style name="PopupMessageText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PopupTimeText">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="ReceiptItemNameText">
        <item name="android:textSize">15.5sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#5a564e</item>
    </style>

</resources>
